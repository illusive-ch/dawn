{% if icon != 'none' %}
    {% assign myclass = 'icon icon-' | append: icon | append: ' ' | append: class %}
        {%- case icon -%}
            {%- when 'bunny' -%}
                {% render 'icon-bunny', class: myclass %}
            {%- when 'flower' -%}
                {% render 'icon-flower', class: myclass %}
            {%- when 'earth' -%}
                {% render 'icon-earth', class: myclass %}
            {%- when 'star' -%}
                {% render 'icon-star', class: myclass %}
            {%- when 'checkmark' -%}
                {% render 'icon-checkmark', class: myclass %}
            {%- when 'quote-left' -%}
                {% render 'icon-quote-left', class: myclass %}
            {%- when 'quote-right' -%}
                {% render 'icon-quote-right', class: myclass %}
            {%- when 'brushstroke' -%}
                {% render 'icon-brushstroke', class: myclass %}
        {%- endcase -%}
{%- endif -%}